<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="eventHandlers"
            type="com.example.expensesmanagementapplication.event_handlers.RegisterActivityEventHandlers"
            />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/homePageHeading2"
            android:layout_width="349dp"
            android:layout_height="50dp"
            android:layout_marginTop="80dp"
            android:gravity="start"
            android:singleLine="false"
            android:text="@string/nice_to_meet_you"
            android:textColor="@color/black"
            android:textSize="40sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/homePageHeading3"
            android:layout_width="353dp"
            android:layout_height="25dp"
            android:layout_marginTop="140dp"
            android:gravity="start"
            android:singleLine="false"
            android:text="@string/just_a_moment_to_get_you_started"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.534"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="38dp"
            android:layout_height="42dp"
            android:backgroundTint="#FFFFFF"
            app:srcCompat="@drawable/ic_arrow_left"
            tools:layout_editor_absoluteX="31dp"
            tools:layout_editor_absoluteY="25dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/name"
            android:textColor="@color/black"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="31dp"
            tools:layout_editor_absoluteY="215dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>